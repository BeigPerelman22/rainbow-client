<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="ExtraText">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/green_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"

        >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="440dp"

            android:background="@drawable/wave__1_"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="1dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/icons8linkedin100" />

            <TextView
                android:id="@+id/textView_ita"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="איתמר"

                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:srcCompat="@drawable/icons8linkedin100" />

            <TextView
                android:id="@+id/textView_a"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="אמיתי"

                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:srcCompat="@drawable/icons8linkedin100" />

            <TextView
                android:id="@+id/textView_l"
                android:layout_width="69dp"
                android:layout_height="21dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="לוי"

                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/text_what_is_rainbow"
                android:layout_width="552dp"
                android:layout_height="281dp"
                android:layout_marginBottom="410dp"
                android:gravity="center"
                android:text="הורה לילד שאובחן על הרצף האוטיסטי (להלן \nהורטיסט) פוגש בתחילת הדרך \n את התחושה של חוסר אונים - מה עושים עכשיו?\n\n אחרי שמוצאים איזשהי דרך, מסלול וכיוון ישנם\n הרבה דברים שצריך לרכז למקום אחד,\n אבחונים, טיפולים, פגישות, מידע , מסמכים, אנשי \nקשר, קבלות, הוצאות, סיכומים ועוד ועוד ועוד...\n\n כדי לעזור בתוך אוקיינוס המידע הזה אנחנו\n מציעים את רינבואו.\n  ריינבואו יעזור לרכז ולמיין ולתייק בצורה מסודרת \nאת הנושאים השונים ואת כל המידע והפרטים\n הדרושים."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal|bold"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="413dp"
                android:layout_height="277dp"
                android:gravity="center"
                android:text="איתמר, אמיתי, לוי ובייג \n
סטודנטים במכללה למינהל - פקולטת מדעי\n
המחשב.\n\n
ריינובאו הוא פרוייקט הגמר שלנו והתקווה\nשלנו להקל מעט על ארגוןן והקלה באספקט\n
קטן אבל חשוב בהורות מיוחדת.\n
מקווים שתהנו ונשמח לשמוע ממכם כל\n
מילה ורעיון עבור שיפור ריינבואו וקידומו."
                android:textColor="@color/black"


                android:textSize="15sp"
                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_what_is_rainbow" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/iconsmail"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/mail_rainbow"
                style="@style/Animation.Design.BottomSheetDialog"
                android:layout_width="271dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="rainbow@rainbow.com"

                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icons8linkedin100" />


            <TextView
                android:id="@+id/textView_b"
                android:layout_width="81dp"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="בייג"

                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="126dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_shapes"
                android:gravity="center"
                android:text="מה זה ריינבואו?"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="37dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/custom_shapes_green"
                android:gravity="center"
                android:text="מי אנחנו"
                android:textColor="@color/black"

                android:textSize="17sp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="126dp"
                android:layout_height="37dp"
                android:layout_marginTop="510dp"
                android:background="@drawable/custom_shapes_p"
                android:gravity="center"
                android:text="צרו איתנו קשר"

                android:textColor="@color/black"
                android:textSize="17sp"

                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
</RelativeLayout>