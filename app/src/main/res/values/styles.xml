<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<!--    <style name="AppShapeAppearance.SmallComponet" parent="ShapeAppearance.MaterialComponents.SmallComponent"/>-->
<!--    <item name="cornerFamily" type="drawable">cut</item>-->
<!--    <item name="cornerSize" type="drawable">14dp</item>-->
    <style name="AppShapeAppearance.SmallComponet" parent="ShapeAppearance.MaterialComponents.SmallComponent"/>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- Customize the text appearance -->
        <item name="android:textColor">#090808</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">8dp</item>
<!--        <item name="height">20sp</item>-->

        <!-- Customize the dropdown background color -->
        <item name="android:popupBackground">#f1f1f1</item>
        <item name="android:textAppearanceLargePopupMenu">@drawable/rainbow_background</item>
    </style>
</resources>