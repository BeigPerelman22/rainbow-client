<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0DAED"
    android:scrollbarDefaultDelayBeforeFade="0"
    android:scrollbarFadeDuration="0"
    android:textAlignment="textEnd"
    android:textDirection="firstStrongRtl"
    tools:context=".AddMeetingActivity">

    <EditText
        android:id="@+id/textDate"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:hint="תאריך "
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textLoc"
        app:layout_constraintTop_toBottomOf="@+id/text_MeetingName" />

    <EditText
        android:id="@+id/textCaregiverDetails"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:hint="פרטי המטפל"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textLoc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textLoc"
        app:layout_constraintTop_toBottomOf="@+id/textLoc" />

    <EditText
        android:id="@+id/textLoc"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:hint="מיקום"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_MeetingName"
        app:layout_constraintStart_toStartOf="@+id/text_MeetingName"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <EditText
        android:id="@+id/textTime"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:hint="שעה"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textDate"
        app:layout_constraintStart_toStartOf="@+id/textDate"
        app:layout_constraintTop_toBottomOf="@+id/textDate" />

    <EditText
        android:id="@+id/text_MeetingName"
        android:layout_width="334dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:hint="שם הפגישה"

        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/date_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_baseline_calendar_month_24"
        android:contentDescription="@string/bottom_sheet_behavior"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        app:layout_constraintEnd_toStartOf="@+id/textDate"
        app:layout_constraintTop_toTopOf="@+id/textDate" />


    <Button
        android:id="@+id/time_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_time"
        android:contentDescription="@string/bottom_sheet_behavior"
        app:layout_constraintBottom_toBottomOf="@+id/textTime"
        app:layout_constraintEnd_toEndOf="@+id/date_2"
        app:layout_constraintStart_toStartOf="@+id/date_2"
        app:layout_constraintTop_toTopOf="@+id/textTime"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_add_files_kabala"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_note_add"
        android:paddingHorizontal="10dp"
        android:text="קבלה"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textCaregiverDetails"
        app:layout_constraintStart_toStartOf="@+id/textCaregiverDetails"
        app:layout_constraintTop_toBottomOf="@+id/textCaregiverDetails"
        tools:ignore="ExtraText,MissingConstraints" />

    <Button
        android:id="@+id/btn_Submitted_to_KOFH"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_note_add"
        android:paddingHorizontal="10dp"
        android:text="הוגש לקופ&quot;ח"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_files_kabala"
        app:layout_constraintStart_toStartOf="@+id/btn_add_files_kabala"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_files_kabala"
        tools:ignore="ExtraText,MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_submitted_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/float_kabala_camera"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_files_kabala"
        app:layout_constraintTop_toTopOf="@+id/float_kabala_camera"
        app:srcCompat="@drawable/image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_submitted_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/float_kabala_img"
        app:layout_constraintTop_toTopOf="@+id/btn_add_files_kabala"
        app:srcCompat="@drawable/camera" />

    <Button
        android:id="@+id/btn_Refund_received"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_note_add"
        android:paddingHorizontal="10dp"
        android:text="התקבל החזר"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_Submitted_to_KOFH"
        app:layout_constraintStart_toStartOf="@+id/btn_Submitted_to_KOFH"
        app:layout_constraintTop_toBottomOf="@+id/btn_Submitted_to_KOFH"
        tools:ignore="ExtraText,MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_Refund_received_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/float_kabala_camera"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_files_kabala"
        app:layout_constraintTop_toTopOf="@+id/float_kabala_camera"
        app:srcCompat="@drawable/image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_Refund_received_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Refund_received"
        app:layout_constraintEnd_toStartOf="@+id/float_kabala_img"
        app:layout_constraintTop_toTopOf="@+id/btn_Refund_received"
        app:srcCompat="@drawable/camera" />

    <Button
        android:id="@+id/btn_change_mee"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"

        android:background="@drawable/round_button1"
        android:paddingHorizontal="10dp"
        android:text="הוסף פגישה"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Refund_received"
        tools:ignore="ExtraText,MissingConstraints" />

    <TextView
        android:id="@+id/textView_kabala"
        android:layout_width="149dp"
        android:layout_height="35dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_files_kabala"
        app:layout_constraintTop_toTopOf="@+id/btn_add_files_kabala"
        tools:layout_editor_absoluteX="28dp" />

    <TextView
        android:id="@+id/textView_Submitted_to_KOFH"
        android:layout_width="149dp"
        android:layout_height="35dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/btn_Submitted_to_KOFH"
        app:layout_constraintEnd_toEndOf="@+id/textView_kabala"
        app:layout_constraintStart_toStartOf="@+id/textView_kabala"
        app:layout_constraintTop_toTopOf="@+id/btn_Submitted_to_KOFH" />

    <TextView
        android:id="@+id/textView_Refund_received"
        android:layout_width="149dp"
        android:layout_height="35dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/btn_Refund_received"
        app:layout_constraintEnd_toEndOf="@+id/textView_Submitted_to_KOFH"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/textView_Submitted_to_KOFH"
        app:layout_constraintTop_toTopOf="@+id/btn_Refund_received" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_kabala_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/float_kabala_camera"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_files_kabala"
        app:layout_constraintTop_toTopOf="@+id/float_kabala_camera"
        app:srcCompat="@drawable/image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_kabala_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/float_kabala_img"
        app:layout_constraintTop_toTopOf="@+id/btn_add_files_kabala"
        app:srcCompat="@drawable/camera" />


</androidx.constraintlayout.widget.ConstraintLayout>